<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/yf_button_disabled_bg" />
            <stroke
                android:width="1dp"
                android:color="@color/yf_border_general" />
            <corners android:radius="12dp" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/yf_button_disabled_bg" />
            <stroke
                android:width="1dp"
                android:color="@color/yf_brand_border_subtle" />
            <corners android:radius="12dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/yf_bg_box" />
            <stroke
                android:width="1dp"
                android:color="@color/yf_border_general" />
            <corners android:radius="12dp" />
        </shape>
    </item>
</selector>
